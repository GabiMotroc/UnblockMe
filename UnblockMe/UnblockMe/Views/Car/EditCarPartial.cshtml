@model Car

    <style>
        .modal {
            position: absolute;
            float: left;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
    </style>

    <div class="modal" id="EditCar" style="width:50%; align-content:center ">

        <div class="moda-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="test">Test label</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        X
                    </button>
                </div>
                <div class="modal-body">
                   
                    <form asp-action="EditCar" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-md-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="LicencePlate" />
                                <input type="hidden" asp-for="OwnerId" value="@Model?.OwnerId" />
                                <input type="hidden" asp-for="PhotoId" value="@Model?.PhotoId" />

                                @if (Model.Photo.Photo != null)
                                {
                                    <img src="data:image/png;base64,@Model.Photo.Photo" style="max-width:250px" />
                                }
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Photo.Photo, new { @class = "box", @placeholder = "Upload photo" })
                                    <input style="float:left; margin-right:20px;" type="file" name="Photo.PhotoFile" id="Photo_PhotoFile" accept=".png,.jpg,.jpeg,.gif,.tif" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Maker" class="control-label"></label>
                                    <input asp-for="Maker" class="form-control" />
                                    <span asp-validation-for="Maker" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Model" class="control-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Colour" class="control-label"></label>
                                    <input asp-for="Colour" class="form-control" />
                                    <span asp-validation-for="Colour" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div style="float:right; margin-left:20px;">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
