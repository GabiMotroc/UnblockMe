@model Car

    <style>
        .modal {
            position: absolute;
            float: left;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }
    </style>

    <div class="modal" id="EditCar" style="width:50%; align-content:center ">

        <div class="moda-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="test">Test label</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>X</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="EditCar">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="LicencePlate" />
                                <input type="hidden" asp-for="OwnerId" value="@Model?.OwnerId" />
                                <div class="form-group">
                                    <label asp-for="Maker" class="control-label"></label>
                                    <input asp-for="Maker" class="form-control" />
                                    <span asp-validation-for="Maker" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Model" class="control-label"></label>
                                    <input asp-for="Model" class="form-control" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Colour" class="control-label"></label>
                                    <input asp-for="Colour" class="form-control" />
                                    <span asp-validation-for="Colour" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BockedBy" class="control-label"></label>
                                    <input asp-for="BockedBy" class="form-control" />
                                    <span asp-validation-for="BockedBy" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Blocks" class="control-label"></label>
                                    <input asp-for="Blocks" class="form-control" />
                                    <span asp-validation-for="Blocks" class="text-danger"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Save</button>

                </div>
            </div>
        </div>
    </div>
