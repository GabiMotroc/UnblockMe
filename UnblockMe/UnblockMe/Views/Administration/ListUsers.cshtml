@model List<UnblockMe.ViewModels.ListUserViewModel>

@{
    ViewBag.Title = "ListUsers";
}
<style>
    .ban-button {
    }
    .ban-button:hover {
        transform: scale(1.3)
    }
</style>
<link href="~/lib/own.css" rel="stylesheet" />

@if (Model.Any())
{

    <div class="flex-container">

        @foreach (var item in Model)
        {
        <div class="flex-item button" style="font-size: 2em">
            @item.Name

            <a asp-controller="Administration" asp-action="BlockUser" asp-route-Id="@item.Id"
               class="btn">
                <i class="fa fa-ban ban-button" aria-hidden="true"></i>
            </a>
        </div>
        }
    </div>
}

else
{
    <h3>No users found.</h3>
}
