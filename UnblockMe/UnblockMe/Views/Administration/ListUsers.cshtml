@model List<UnblockMe.ViewModels.ListUserViewModel>

@{
    ViewBag.Title = "ListUsers";
}

@if (Model.Any())
{
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th class="buttons">
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="licence">
                    @item.Id
                </td>

                <td class="blocked">
                        @item.Name
                </td>

                <td class="buttons">
                            <a asp-controller="Administration" asp-action="BlockUser" asp-route-Id="@item.Id" 
                               class="btn">
                                <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                            </a>
                </td>
            </tr>
        }
    </table>
}

else
{
    <h3>No users found.</h3>
}
